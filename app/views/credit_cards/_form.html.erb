<%= simple_form_for(credit_card) do |f| %>
  <%= f.input :cardholder %>
  <%= f.input :address %>
  <%= f.input :card_type %>
  <%= f.input :card_issuer, collection: CreditCard::ISSUERS %>
  <%= f.input :number %>
  <%= f.input :date %>
  <%= f.input :pin %>
  <%= f.input :credit_limit %>
  <%= f.input :price_per_day %>
  <%= f.hidden_field :user_id %>
  <%= f.submit %>
<% end %>
