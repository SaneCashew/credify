<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="p-4 shadow-lg border">
        <%= simple_form_for(credit_card) do |f| %>
          <div class="row">
            <div class= "col">
              <%= f.input :cardholder,  input_html: { class: 'form-control' } %>
            </div>
            <div class= "col">
              <%= f.input :address %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.input :card_type, collection: CreditCard::CARD_TYPE %>
            </div>
            <div class="col">
              <%= f.input :card_issuer, collection: CreditCard::ISSUERS %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.input :number %>
            </div>
            <div class="col">
              <%= f.input :date %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.input :pin %>
            </div>
            <div class="col">
              <%= f.input :credit_limit %>
            </div>
          </div>
          <%= f.input :price_per_day %>
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Cancel", credit_cards_path, class: "btn btn-outline-secondary my-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
