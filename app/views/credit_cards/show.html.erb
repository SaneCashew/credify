<div class="container py-4">
  <h3>Here is <%= @credit_card.user.email %>'s card</h3>
  <p>Cardholder name: <%= @credit_card.cardholder %></p>
  <p>Card Type: <%= @credit_card.card_type %></p>
  <p>Card Issuer: <%= @credit_card.card_issuer %></p>
  <p>Credit Limit: <%= @credit_card.credit_limit %></p>
  <p>Price Per Day: <%= @credit_card.price_per_day %></p>
  <% if @credit_card.user_id == current_user.id %>
    <%= link_to "Remove your card", credit_card_path(@credit_card), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Book this card", new_credit_card_reservation_path(@credit_card), class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back", credit_cards_path, class: "btn btn-primary" %>
</div>
<hr>
<div class="container py-4">
  <% if @credit_card.user_id == current_user.id %>
    <h3>Your bookings:</h3>
  <% else %>
    <h3>Booked for the following dates: </h3>
  <% end %>
  <% @reservations.each do |reservation| %>
    <br>
    <span>From: <%= reservation.start_date %></span>
    <span>Until: <%= reservation.end_date %></span>
    <br>
    <% end %>
</div>
