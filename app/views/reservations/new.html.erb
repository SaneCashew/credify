<div class="container py-4">
  <h3 class="text-center">When do you need this card?</h3>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="p-4 shadow-lg border">
          <%= simple_form_for([@credit_card, @reservation]) do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
